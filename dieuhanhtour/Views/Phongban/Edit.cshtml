@model PhongbanViewModel

@{
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <h1>
        Cập nhật khối / phòng
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active"><a href="@Context.Session.GetString("urlPhongban")">danh sách khối phòng</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="box">
            <div class="box-body">
                <div class="col-md-12">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-md-3">
                            <label class="control-label">Mã</label>
                            <input asp-for="maphong" class="form-control text-center" maxlength="5" readonly />
                            <span asp-validation-for="maphong" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-5">
                            <label class="control-label">Tên khối / phòng</label>
                            <input asp-for="tenphong" class="form-control text-uppercase" />
                            <span asp-validation-for="tenphong" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label class="control-label">Code</label>
                            <input asp-for="macode" class="form-control text-uppercase" />
                            <span asp-validation-for="macode" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label class="control-label">Trạng thái</label>
                            <select asp-for="trangthai" asp-items="@ViewBag.trangthai" class="form-control"></select>
                        </div>
                        <div class="form-group col-md-12">
                            <input type="submit" value="Cập nhật" class="btn btn-primary" />
                            <a href="@Context.Session.GetString("urlPhongban")" class="btn btn-default">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
