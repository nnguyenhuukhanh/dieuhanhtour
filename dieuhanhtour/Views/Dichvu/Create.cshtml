@model Dichvu

@{
    ViewData["Title"] = "Create";
}

<section class="content-header">
    <h1>
        Thêm dịch vụ
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active"><a href="/Dichvu">danh sách dịch vụ</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="box">
            <div class="box-body">
                <div class="col-md-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-md-3">
                            <label class="control-label">Dịch vụ</label>
                            <input asp-for="Iddichvu" class="form-control text-uppercase text-center" maxlength="3" />
                            <span asp-validation-for="Iddichvu" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-7">
                            <label class="control-label">Tên dịch vụ</label>
                            <input asp-for="Tendv" class="form-control" />
                            <span asp-validation-for="Tendv" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-2">
                            <label class="control-label">Trạng thái</label>
                            <select asp-for="Trangthai" asp-items="@ViewBag.trangthai" class="form-control"></select>
                        </div>
                        <div class="form-group col-md-12">
                            <input type="submit" value="Thêm" class="btn btn-primary" />
                            <a href="/Dichvu" class="btn btn-default">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
