@model IEnumerable<XeDoanViewModel>

<link href="~/AdminLTE/plugins/jquery-ui/css/jquery-ui/themes/ui-darkness/jquery-ui.css" rel="stylesheet" />

@{
    ViewData["Title"] = "XeDoan";
}
@section Scripts{
    <script src="~/Asset/js/Baocao/XeDoanControl.js"></script>
}

<section class="content-header">
    <h1>
        Thống kê phân xe theo đoàn
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active"><a asp-action="index" asp-controller="Tour">Danh sách tour</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="box">
            <div class="box-header">
                <div class="col-md-12">
                    <form id="frmXeDoan">
                        <div class="col-md-12">
                            <div class="col-md-2">
                                Từ ngày
                                <input type="text" class="form-control text-center datepicker" value="@ViewBag.tungay" title="dd/MM/yyyy" name="tungay" />
                            </div>
                            <div class="col-md-2">
                                Đến ngày
                                <input type="text" class="form-control text-center datepicker" value="@ViewBag.denngay" title="dd/MM/yyyy" name="denngay" />
                            </div>
                            <br />
                            <div class="col-md-6">
                                <span class="btn-group">
                                    <button type="submit" formaction="/Baocao/XeDoan" formmethod="get" class="btn btn-default"><i class="fa fa-search"></i></button>
                                    <button type="submit" formaction="/Baocao/XeDoanToExcel" formmethod="post" class="btn btn-success" title="Export danh sách to Excel"><i class="fa fa-file-excel-o"></i></button>
                                </span>
                                <label>
                                    <input type="radio" name="giatri" class="minimal" value="A" @ViewBag.checka />
                                    &nbsp;&nbsp;&nbsp;Chưa phân xe &nbsp;&nbsp;&nbsp;
                                </label>
                                <label>
                                    <input type="radio" name="giatri" class="minimal" value="B" @ViewBag.checkb />
                                    &nbsp;&nbsp;&nbsp; Đã phân xe
                                </label>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="box-body">
                <div class="col-md-12" style="overflow-x:auto">
                    <table class="table mytable text-nowrap">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>
                                    SGT Code
                                </th>
                                <th>
                                    Lộ trình
                                </th>
                                <th>
                                    SK
                                </th>
                                <th>
                                    Loại xe
                                </th>
                                <th>
                                    Lái xe
                                </th>
                                <th>
                                    Số xe
                                </th>
                                <th>
                                    Điện thoại
                                </th>
                                <th>
                                    Ngày đón
                                </th>

                                <th>
                                    Đến ngày
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.count > 0)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center" style="width:20px;">@item.stt</td>
                                        <td style="width:100px;">
                                            @item.sgtcode
                                        </td>
                                        <td>
                                            @item.lotrinh
                                        </td>

                                        <td class="text-center">
                                            @item.sokhach
                                        </td>
                                        <td>
                                            @item.loaixe
                                        </td>
                                        <td>
                                            @item.laixe
                                        </td>
                                        <td>
                                            @item.soxe
                                        </td>
                                        <td>
                                            @item.dienthoai
                                        </td>
                                        <td>
                                            @item.ngaydon.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>
                                            @item.denngay.ToString("dd/MM/yyyy")
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</section>


