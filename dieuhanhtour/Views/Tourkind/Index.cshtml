@model IEnumerable<Tourkind>

@{
    ViewData["Title"] = "Index";
}

@section Scripts{
    <script>
        $(function () {
            $('.mytable').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': false,
                'ordering': true,
                'info': false,
                'autoWidth': false
            })
        })
    </script>
    }

    <section class="content-header">
        <h1>
            Danh sách loại tour
            @*<small></small>*@
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li class="active"><a asp-action="index">danh sách loại tour</a></li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="box">
                <div class="box-header">
                    <form asp-action="index" method="get">
                        <div class="form-group">
                            <div class="col-xs-12 col-md-6">
                                <div class="input-group">
                                    <input type="text" placeholder="Tìm tên loại tour" class="form-control" name="searchString" value="@ViewData["currentFilter"]" />
                                    <span class="input-group-btn">
                                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                        <a asp-action="create" class="btn btn-primary"><i class="fa fa-plus"></i></a>
                                    </span>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
                <div class="box-body">
                    <div class="col-md-12">
                        <table class="table mytable">
                            <thead>
                                <tr>
                                    <th class="text-center" width="10%"><i class="fa fa-gear"></i></th>
                                    <th class="text-center" width="10%">Id</th>
                                    <th>
                                        Tên loại tour
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a> |
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger" onclick="return confirm ('Xóa loại tour @item.TourkindInf ?')"><i class="fa fa-trash"></i></a>
                                        </td>
                                        <td class="text-center">@item.Id</td>
                                        <td>
                                            @item.TourkindInf
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>


