<section class="content-header">
    <h1>
        Danh sách quốc gia
        @*<small></small>*@
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active"><a asp-action="index">danh sách quốc gia</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="box">
            <div class="box-header">
                <form asp-action="index" method="get">
                    <div class="form-group">
                        <div class="col-xs-12 col-md-6">
                            <div class="input-group">
                                <input type="text" placeholder="Tìm thông tin" class="form-control" name="searchString" value="@ViewData["currentFilter"]" />
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                    <a asp-action="create" class="btn btn-primary"><i class="fa fa-plus"></i></a>
                                </span>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
            <div class="box-body">
                <div class="col-md-12">
                    <table class="table text-nowrap mytable">
                        <thead>
                            <tr>
                                <th class="text-center" width="5%"><i class="fa fa-gear"></i></th>
                                <th>
                                    Code
                                </th>
                                <th>
                                    Code Alpha
                                </th>
                                <th>
                                    Phiên âm tiếng việt
                                </th>
                                <th>
                                    Phiên âm quốc tế 
                                </th>
                                <th>
                                    Mã điện thoại
                                </th>
                                <th>
                                   Lục địa
                                </th>
                                <th>
                                    Lãnh thổ
                                </th>                                
                            </tr>
                        </thead>
                        <tbody id="tbCountry">
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger" onclick="return confirm ('Xóa quốc gia @item.Nation ?')"><i class="fa fa-trash"></i></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Codealpha)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Natione)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.TelCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Continent)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Territory)
                                </td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

