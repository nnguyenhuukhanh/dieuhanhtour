@model Tournode


@*<link href="~/AdminLTE/plugins/bootstrap-wysihtml5/css/bootstrap3-wysihtml5.css" rel="stylesheet" />
<script src="~/AdminLTE/plugins/bootstrap-wysihtml5/js/bootstrap3-wysihtml5.all.js"></script>*@
<script src="~/Asset/js/Tour/TourControl.js"></script>
<script>
    $(function () {
        //$('.textarea').wysihtml5()
        var locktour = $("#txtLocktour").val();
        if (locktour.length > 0) {           
            $("#btCapnhatEditTourtempNote").attr('disabled', true).addClass('ui-state-disabled');
        }
    })
</script>

<form id="frmEditTourtempNote">
    <div class="row">
        <input type="hidden" asp-for="Sgtcode" value="@ViewBag.Sgtcode" />
        <div class="col-md-12">
            <div class="box">
                @*<div class="box-header">
                    <div class="box-title">
                        <h4>Ghi chú đầu tour</h4>
                    </div>
                </div>*@
                <h4>Đầu tour</h4>
                <div class="box-body">
                    <textarea class="textarea" asp-for="Headernode" placeholder="Ghi chú đầu tour"
                              style="width: 100%; height: 100px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="box">
                @*<div class="box-header">
                    <div class="box-title">
                        <h4>Ghi chú cuối tour</h4>
                    </div>
                </div>*@
                <h4>Cuối tour</h4>
                <div class="box-body">
                    <textarea class="textarea" asp-for="Footernode" placeholder="Ghi chú cuối tour"
                              style="width: 100%; height: 100px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                </div>
            </div>
        </div>
        
        <div class="col-md-12">
            @if (ViewBag.operators == Context.Session.GetString("username") || Context.Session.GetString("Admin").ToString().ToLower() == "true")
            {
                <input type="button" value="Cập nhật" class="btn btn-primary" id="btCapnhatEditTourtempNote" />
            }
            <a href="@Context.Session.GetString("urlEditTour")" class="btn btn-default">Hủy</a>
        </div>
        
    </div>
</form>



